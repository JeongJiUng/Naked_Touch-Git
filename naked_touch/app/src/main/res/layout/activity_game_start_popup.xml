<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:background="@drawable/game_start_popup_img" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_margin="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/img_thumbnail"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/radioGroup_level">

                <RadioButton
                    android:soundEffectsEnabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="노말"
                    android:id="@+id/radioButton_normal"
                    android:checked="true"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="20dip" />

                <RadioButton
                    android:soundEffectsEnabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="하드"
                    android:id="@+id/radioButton_hard"
                    android:textColor="#000000"
                    android:checked="false"
                    android:layout_weight="1"
                    android:textSize="20dip" />

                <RadioButton
                    android:soundEffectsEnabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="헬"
                    android:id="@+id/radioButton_hell"
                    android:textColor="#000000"
                    android:checked="false"
                    android:layout_weight="1"
                    android:textSize="20dip" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/img_ticket"
                android:background="@drawable/ticket"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="000000"
                android:id="@+id/string_ticket_count"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="30dip" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/imageButton_game_start"
                    android:background="@drawable/imagebutton_game_start_click_effect"
                    android:soundEffectsEnabled="false"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>